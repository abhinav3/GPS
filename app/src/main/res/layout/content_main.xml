<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="1">
    <fragment
        android:id="@+id/mapid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"/>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_marginTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:background="@drawable/edit_text_style"
        android:textColorHint="@color/grey"
        android:hint="@string/autocomplete_hint"
        android:drawableLeft="@mipmap/ic_action_search_black"
        android:drawablePadding="9dp"
        android:textColor="@android:color/primary_text_light"
        android:text="Please enter your place">

        <requestFocus />
    </AutoCompleteTextView>

    <ImageView
        android:id="@+id/cross"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@mipmap/ic_clear_black"
        android:onClick="crossButtonClickHandler"
        android:layout_alignTop="@+id/autoCompleteTextView"
        android:layout_alignRight="@+id/autoCompleteTextView"
        android:layout_alignEnd="@+id/autoCompleteTextView" />

  <!--  <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->

</RelativeLayout>

