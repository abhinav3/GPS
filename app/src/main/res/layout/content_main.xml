    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:background="@drawable/edit_text_style"
        android:textColorHint="@color/grey"
        android:hint="@string/autocomplete_hint"
        android:drawableLeft="@mipmap/ic_action_search_black"
        android:drawablePadding="9dp"
        android:textColor="@android:color/primary_text_light"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/cross">

        <requestFocus />
    </AutoCompleteTextView>

    <ImageView
        android:id="@+id/cross"
        android:layout_width="26dp"
        android:layout_height="16dp"
        android:src="@mipmap/ic_clear_black"
        android:onClick="crossButtonClickHandler"
        android:layout_alignTop="@+id/autoCompleteTextView"
        android:layout_alignBottom="@+id/autoCompleteTextView"
        android:layout_alignParentEnd="true" />


